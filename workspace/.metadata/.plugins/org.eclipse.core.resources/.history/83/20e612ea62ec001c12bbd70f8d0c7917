package persistidor.comandos;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;
import persistidor.excepciones.NoExisteSesionException;

@Component
public class ExisteObjetoDeClaseAsociadoASesionComando implements IExisteEntidadObjetoAsociadoASesionComando
{
	@Autowired
	private IObtenerObjectAsociadoASesionComando obtenerObjetoDeClaseAsociadoASesionComando;
	
	public <T> boolean ejecutar(long idSesion, Class<T> clazz) throws NoExisteSesionException
	{
		T objetoDeClaseAsociadoASesion = obtenerObjetoDeClaseAsociadoASesionComando.ejecutar(idSesion, clazz);
		
		return objetoDeClaseAsociadoASesion != null;
	}
}
