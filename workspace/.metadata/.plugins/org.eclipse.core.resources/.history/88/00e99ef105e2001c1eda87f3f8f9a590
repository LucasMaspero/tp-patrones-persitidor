package persistidor.comandos;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;
import persistidor.entidades.Sesion;
import persistidor.servicios.ServicioDeSesiones;

@Component
public class InsertarObjetoAsociadoASesionComando
{
	@Autowired
	private ServicioDeSesiones servicioDeSesiones;
	
	@Autowired
	private CrearNuevaSesionComando crearNuevaSesionComando;
	
	public void Ejecutar(long idSesion, Object o)
	{
		ManejarSesion(idSesion);
		
		
	}
	
	private void ManejarSesion(long idSesion)
	{
		if (servicioDeSesiones.existeSesion(idSesion))
		{
			Sesion sesionExistente = servicioDeSesiones.obtenerSesionPorId(idSesion);
			sesionExistente.actualizarUltimoAcceso();
			servicioDeSesiones.actualizarSesion(sesionExistente);
		}
		else
		{
			crearNuevaSesionComando.Ejecutar(idSesion);
		}
	}
}
