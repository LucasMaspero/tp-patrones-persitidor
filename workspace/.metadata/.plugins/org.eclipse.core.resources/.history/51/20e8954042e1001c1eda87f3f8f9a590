package persistidor.comandos;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import persistidor.excepciones.NoExisteSesionException;
import persistidor.servicios.ServicioDeSesiones;

@Component
public class ExisteObjetoAsociadoASesionComando
{
	@Autowired
	private ServicioDeSesiones servicioDeSesiones;
	
	@Autowired
	private ExisteObjetoDeClaseAsociadoASesionComando existeObjetoDeClaseAsociadoASesionComando;
	
	// Obtiene la clase del objeto o y chequea si existe alguna instancia de esa clase para la sesion de ID idSesion.
	// Basicamente, esto da true siempre y cuando se haya persistido de forma directa algun objeto
	// de dicha clase con ese ID de sesion.
	public boolean Ejecutar(long idSesion, Object o) throws NoExisteSesionException
	{
		if (!servicioDeSesiones.existeSesion(idSesion))
		{
			throw new NoExisteSesionException("No existe sesion de ID: " + idSesion);
		}
		
		Class<?> claseDelObjeto = o.getClass();
		
		return existeObjetoDeClaseAsociadoASesionComando.Ejecutar(idSesion, clazz);
	}
}
